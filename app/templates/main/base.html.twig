<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}platform{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-5.0.1/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous">
        </script>
        <script src="{{ asset('assets/framework/bootstrap-5.0.1/js/bootstrap.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('label').remove();
            });
        </script>
    {% endblock %}
</head>
<body>
{% block header %}
    <header>
        <img class="bg-header" src="/assets/img/bg-header.jpg">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img class="header-logo" src="/assets/img/logo.png">
                </div>
                <nav class="col-10 navbar-light navbar navbar-expand-lg">
                    <a href="{{ path('app_main_home_index') }}" class="nav-link active">Приветствие</a>
                    <a href="{{ path('app_main_home_sponsors') }}" class="nav-link">Организаторы</a>
                    <a href="{{ path('app_main_home_exhibition') }}" class="nav-link">Выставка</a>
                    <a href="{{ path('app_main_home_programms') }}" class="nav-link">Программа</a>
                    <a href="{{ path('app_broadcast', {'chatid': 1}) }}" class="nav-link">Трансляция</a>
                    <a href="{{ path('app_company') }}" class="nav-link">Компании</a>
                    <a href="{{ path('app_poster') }}" class="nav-link">Постеры</a>
                    <a href="{{ path('app_main_home_help') }}" class="nav-link link-dark">Поддержка</a>
                </nav>
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}
{% endblock %}
    <footer>
        <img src="/assets/img/bg-footer.jpg">
    </footer>
</body>
</html>
