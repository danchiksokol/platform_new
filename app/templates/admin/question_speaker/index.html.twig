{% extends 'admin/base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container">
        {% for row in chatrooms %}
            <span><a type="button" class="btn btn-success"
                     href="{{ path('app_admin_question_speaker', {'chatid': row.id}) }}">{{ row.name }}</a></span>
        {% endfor %}
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Спикер</th>
                <th scope="col">Пользователь</th>
                <th scope="col">Чат</th>
                <th scope="col">Вопрос</th>
                <th>Отобразить</th>
                <th>Удалить</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in questions %}
                <tr>
                    {% set count = count + 1 %}
                    <td>{{ count }}</td>
                    <td>{{ row.speaker }}</td>
                    <td>{{ row.user }}</td>
                    <td>{{ row.chat }}</td>
                    <td>{{ row.content }}</td>
                    <td>
                        {% if row.isShow %}
                            <a type="button" class="btn btn-success"
                               href="{{ path('app_admin_question_speaker_hide', {'id': row.id}) }}">Скрыть</a>
                        {% else %}
                            <a type="button" class="btn btn-warning"
                               href="{{ path('app_admin_question_speaker_show', {'id': row.id}) }}">Отобразить</a>
                        {% endif %}
                    </td>
                    <td><a type="button" class="btn btn-danger"
                           href="{{ path('app_admin_question_speaker_delete', {'id': row.id}) }}">X</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
