{% extends 'admin/base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container">
        <span><a type="button" class="btn btn-success" href="{{ path('app_admin_company_material_create') }}">Добавить Материал</a></span>
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Logo</th>
                <th scope="col">Отображен</th>
                <th>Редактировать</th>
                <th>Удалить</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in materials %}
                <tr>
                    {% set count = count + 1 %}
                    <td>{{ row.id }}</td>
                    <td width="100px"><img
                                src="{{ asset('uploads/company/' ~ row.company.id ~'/materials/' ~ row.thumbnail) }}">
                    </td>
                    <td>{% if row.isShow %}
                        <a type="button" class="btn btn-success"
                           href="{{ path('app_admin_company_material_hide', {'id': row.id}) }}">Скрыть</a></td>
                {% else %}
                    <a type="button" class="btn btn-warning"
                       href="{{ path('app_admin_company_material_show', {'id': row.id}) }}">Отобразить</a></td>
                    {% endif %}
                    </td>
                    <td><a type="button" class="btn btn-secondary"
                           href="{{ path('app_admin_company_material_update', {'id': row.id}) }}">Редактировать</a></td>
                    <td><a type="button" class="btn btn-danger"
                           href="{{ path('app_admin_company_material_delete', {'id': row.id}) }}">X</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
