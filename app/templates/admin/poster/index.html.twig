{% extends 'admin/base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Текст</th>
                <th scope="col">PDF</th>
                <th scope="col">Preview</th>
                <th>Отобразить</th>
                <th>Удалить</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in posters %}
                <tr>
                    {% set count = count + 1 %}
                    <td>{{ count }}</td>
                    <td>{{ row.title }}</td>
                    <td>{{ row.content }}</td>
                    <td>{{ row.file }}</td>
                    <td>{{ row.thumbnail }}</td>
{#                    <td><a type="button" class="btn btn-secondary" href="{{path('app_admin_question_speaker_setshow', {'id': row.id}) }}">Отобразить</a></td>#}
{#                    <td><a type="button" class="btn btn-danger" href="{{path('app_admin_question_speaker_delete', {'id': row.id}) }}">X</a></td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
