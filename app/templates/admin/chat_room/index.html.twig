{% extends 'admin/base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container">
                <span><a type="button" class="btn btn-success"
                         href="{{ path('app_admin_chat_rooms_create') }}">Создать трансляцию</a></span>
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Ф.И.О.</th>
                <th scope="col">Трансляция</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in chatRooms %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.name }}</td>
                    <td>{{ row.broadcast }}</td>
                    <td>
                        <a type="button" class="btn btn-secondary"
                           href="{{ path('app_admin_chat_rooms_update', {'id': row.id}) }}">Изменить</a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger"
                           href="{{ path('app_admin_chat_rooms_delete', {'id': row.id}) }}">X</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
