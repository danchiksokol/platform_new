{% extends 'admin/base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container">
                <span><a type="button" class="btn btn-success"
                         href="{{ path('app_admin_speaker_create') }}">Создать Спикера</a></span>
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Ф.И.О.</th>
                <th scope="col">Трансляция</th>
                <th scope="col">Отображать</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in speakers %}
                <tr>
                    {% set count = count + 1 %}
                    <td>{{ count }}</td>
                    <td>{{ row.user.surname }} {{ row.user.name }} {{ row.user.patronymic }}</td>
                    <td>{{ row.chatroom.name }}</td>
                    <td>
                        {% if row.isShow %}
                            <a type="button" class="btn btn-success"
                               href="{{ path('app_admin_speaker_hide', {'id': row.id}) }}">Скрыть</a>
                        {% else %}
                            <a type="button" class="btn btn-warning"
                               href="{{ path('app_admin_speaker_show', {'id': row.id}) }}">Отобразить</a>
                        {% endif %}
                    </td>
                    <td>
                        <a type="button" class="btn btn-secondary"
                           href="{{ path('app_admin_speaker_update', {'id': row.id}) }}">Изменить</a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger"
                           href="{{ path('app_admin_speaker_delete', {'id': row.id}) }}">X</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
