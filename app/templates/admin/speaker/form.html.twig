{% extends 'admin/base.html.twig' %}
{% block body %}
    {{ form_start(speakerForm) }}
    <div class="container">
        <div class="row">
            <table class="table table-hover table-bordered">
                <tbody>
                <tr>
                    <td>Отображать</td>
                    <td>{{ form_row(speakerForm.is_show) }}</td>
                </tr>
                <tr>
                    <td>Пользователь</td>
                    <td>{{ form_row(speakerForm.user) }}</td>
                </tr>
                <tr>
                    <td>Трансляция</td>
                    <td>{{ form_row(speakerForm.chatroom) }}</td>
                </tr>
                </tbody>
