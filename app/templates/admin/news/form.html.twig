{% extends 'admin/base.html.twig' %}

{% block body %}
    {{ form_start(newsForm) }}
    <div class="container">
        <div class="row">
            <table class="table table-hover table-bordered">
                <tbody>
                <tr>
                    <td>Заголовок</td>
                    <td>{{ form_row(newsForm.title) }}</td>
                </tr>
                <tr>
                    <td>URL</td>
                    <td>{{ form_row(newsForm.href) }}</td>
                </tr>
                <tr>
                    <td>File</td>
                    <td>{{ form_row(newsForm.file) }}</td>
                </tr>
                <tr>
                    <td>Отобразить</td>
                    <td>{{ form_row(newsForm.is_show) }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(newsForm.save) }}</div>
        </div>
    </div>
    {{ form_end(newsForm) }}
{% endblock %}
