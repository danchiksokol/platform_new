{% extends 'base.html.twig' %}
{% block title %}{{ title.title }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Ф.И.О.</th>
                <th scope="col">Место работы</th>
                <th scope="col">Должность</th>
                <th scope="col">Телефон</th>
                <th scope="col">Электронная почта</th>
                <th scope="col">Страна</th>
                <th scope="col">Город</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 0 %}
            {% for row in users %}
                <tr>
                    {% set count = count + 1 %}
                    <td>{{ count }}</td>
                    <td>{{ row.surname }} {{ row.name }} {{ row.patronymic }}</td>
                    <td>{{ row.job }}</td>
                    <td>{{ row.position }}</td>
                    <td>{{ row.phone }}</td>
                    <td>{{ row.email }}</td>
                    <td>{{ row.country }}</td>
                    <td>{{ row.city }}</td>
                    <td><a type="button" class="btn btn-secondary" href="{{path('admin_users_update', {'userId': row.id}) }}">Изменить</a></td>
                    <td><a type="button" class="btn btn-danger" href="{{path('admin_users_delete', {'userId': row.id}) }}">X</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
